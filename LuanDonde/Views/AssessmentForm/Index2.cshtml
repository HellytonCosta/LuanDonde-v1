@{
    ViewData["Title"] = "Contato";
}
@model AssessmentForm
@{
    var obj = Model;
}

<h2 class="bg-transparent text-uppercase text-primary fw-bolder my-5 text-center m-auto" style="max-width: 80%">
    COMO SUA EMPRESA ESTÁ EM RELAÇÃO A MATURIDADE DIGITAL?
</h2>
<p class="m-auto fs- mb-4" style="max-width: 80%; text-align: justify;">
    Aqui você está a poucos passos de saber um pouco mais sobre como sua organização está posicionada e
    descobrir alguns insights que podem mudar o futuro do seu negócio.
</p>

<!-- ABAS DE CONTATO / INFO / QUESTÕES-->
<div class="row m-auto" style="max-width: 70%; border-radius:50px; min-height: 50px;">
    <div class="col-auto row bg-primary rounded-top-4 text-light align-items-center mx-1 px-2">
        <div class="col-auto px-1">
            <img src="~/lib/images/icons/icons8-group-50.png" style="max-width: 2em;" />
        </div>
        <p class="col-auto mb-0 d-none d-lg-block">Contato</p>
    </div>
    <div class="col-auto row rounded-top-4 text-light align-items-center mx-1 px-2" style="background-color: grey">
        <div class="col-auto px-1">
            <img src="~/lib/images/icons/icons8-info-50.png" class="" style="max-width: 2em;" />
        </div>
        <p class="col-auto mb-0 d-none d-lg-block">Formulário</p>
    </div>
    <div class="col-auto row rounded-top-4 text-light align-items-center mx-1 px-2" style="background-color: grey">
        <div class="col-auto px-1">
            <img src="~/lib/images/icons/icons8-info-50.png" style="max-width: 2em;" />
        </div>
        <p class="col-auto mb-0 d-none d-lg-block">Questões</p>
    </div>
</div>
<div class="card shadow border-0 mb-4 m-auto rounded-5 bg-grey" style="max-width: 80%; border-radius:50px;">

    <div class="row">
        <div class="col-12 text-center mt-3">
            <h3 class="text-primary fw-bolder text-uppercase py-1">Informações Gerais</h3>
        </div>
    </div>

    <div class="card-body px-4 py-1">
        <form method="post" class="row">


            <!--NOME DA EMPRESA-->
            <div class="form-floating py-2 col-12">
                <div class="row">

                    <p class="col-auto text-primary fw-bolder fs-4 mb-1">
                        Razão social/Nome da empresa
                    </p>
                    <span class="col-auto fst-italic align-content-center px-0">(OPCIONAL)</span>

                </div>
                <input asp-for="CompanySocialName" class="form-control border-2 shadow py-0 px-4" style="border-radius: 25px" />

                @* <span asp-validation-for="CompanySocialName" class="text-danger"></span> *@
            </div>
            <!--CNPJ EMPRESA-->
            <div class="form-floating py-2 col-12">
                <div class="row">
                    <p class="col-auto text-primary fw-bolder fs-4 mb-1">
                        CNPJ
                    </p>
                    <span class="col-auto fst-italic align-content-center px-0">(OPCIONAL)</span>
                </div>

                <input asp-for="CompanyCNPJ" class="form-control border-2 shadow py-0 px-4" style="border-radius: 25px" />
                @*                     <label asp-for="CompanyCNPJ" class="ms-2"></label> *@
               @*  <span asp-validation-for="CompanyCNPJ" class="text-danger"></span> *@
            </div>

            <!--RATIO FORM - SETOR ATIVIDADE EMPRESA -->
            <div class="row">
                <p class="col-auto text-primary fw-bolder fs-4 my-1">Qual é o principal setor de atividade de sua empresa?</p>
                <span class="col-auto fst-italic align-content-center px-0">(OBRIGATÓRIO)</span>
            </div>

            <div class="row m-sm-auto py-2">
                <div class="col-auto">
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Construção Civil">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Construção Civil
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Educação">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Educação
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Finaceiro">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Finaceiro
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Contabilidade">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Contabilidade
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Saúde">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Saúde
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Tecnologia">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Tecnologia
                        </label>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Indústria">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Indústria
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Serviços">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Serviços
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Transporte">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Transporte
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Varejo">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Varejo
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Imobiliário">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Imobiliário
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySector" value="Turismo">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Turismo
                        </label>
                    </div>
                </div>
                <span asp-validation-for="CompanySector" class="text-danger"></span>
            </div>

            <!-- ATRIBUTOS DAS OUTRAS PÁGINAS (OCULTOS) -->
            <!-- PÁGINA 1 -->
            <input asp-for="Name" class="form-control border-2 shadow py-0 px-4 d-none" style="border-radius: 25px" />
            <input asp-for="Email" class="form-control border-2 shadow p-4 d-none" style="border-radius: 25px" />
            <input asp-for="GrauInstrucao" class="form-check-input border-primary d-none">
            <input asp-for="TermosDeUso" class="form-check-input d-none">
            <!-- PÁGINA 3 -->
            <input asp-for="CompanySize" class="form-check-input border-primary d-none">
            <input asp-for="RolePosition" class="form-check-input border-primary d-none">
            <!-- PÁGINA 4 -->
            <input asp-for="Department" class="form-check-input border-primary d-none">
            <input asp-for="RolePosition" class="form-check-input border-primary d-none">




            <!--SUBMIT FORM  type="submit"    -->
            <div class="row pt-2 align-content-center justify-content-between">
                <div class="col-auto col-md-3">
                    <a asp-controller="AssessmentForm" asp-action="Index1" asp-route-id="@obj.Id" class="btn btn-secondary border text-dark form-control rounded-4 fw-bold sombra">
                        VOLTAR
                    </a>
                </div>

                <div class="col-auto">
                    <h4 class="fw-bolder">2/4</h4>
                </div>
                <div class="col-auto col-md-3">
                    <button type="submit" asp-controller="AssessmentForm" asp-action="Index2" class="btn-blue form-control text-light rounded-4 fw-bold sombra">
                        AVANÇAR
                    </button>
                </div>
            </div>



            <br />
            <br />
            <br />
        </form>
    </div>


</div>
<br />
<br />
<br />


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}