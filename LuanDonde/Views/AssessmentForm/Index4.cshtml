@{
    ViewData["Title"] = "Contato";
}
@model AssessmentForm
@{
    var obj = Model;
}


<h2 class="bg-transparent text-uppercase text-primary fw-bolder my-5 text-center m-auto" style="max-width: 80%">
    COMO SUA EMPRESA ESTÁ EM RELAÇÃO A MATURIDADE DIGITAL?
</h2>
<p class="m-auto fs-5 mb-4" style="max-width: 80%; text-align: justify;">
    Aqui você está a poucos passos de saber um pouco mais sobre como sua organização está posicionada e
    descobrir alguns insights que podem mudar o futuro do seu negócio.
</p>


<!-- ABAS DE CONTATO / INFO / QUESTÕES-->
<div class="row m-auto" style="max-width: 70%; border-radius:50px; min-height: 50px;">
    <div class="col-auto row bg-primary rounded-top-4 text-light align-items-center mx-1 px-2">
        <div class="col-auto px-1">
            <img src="~/lib/images/icons/icons8-group-50.png" style="max-width: 2em;" />
        </div>
        <p class="col-auto mb-0 d-none d-lg-block">Contato</p>
    </div>
    <div class="col-auto row rounded-top-4 text-light align-items-center mx-1 px-2" style="background-color: grey">
        <div class="col-auto px-1">
            <img src="~/lib/images/icons/icons8-info-50.png" class="" style="max-width: 2em;" />
        </div>
        <p class="col-auto mb-0 d-none d-lg-block">Formulário</p>
    </div>
    <div class="col-auto row rounded-top-4 text-light align-items-center mx-1 px-2" style="background-color: grey">
        <div class="col-auto px-1">
            <img src="~/lib/images/icons/icons8-innovation-80.png" style="max-width: 2em;" />
        </div>
        <p class="col-auto mb-0 d-none d-lg-block">Questões</p>
    </div>
</div>
<div class="card shadow border-0 mb-4 m-auto rounded-5 bg-grey" style="max-width: 80%; border-radius:50px;">

    <div class="row">
        <div class="col-12 text-center mt-3">
            <h3 class="text-primary fw-bolder text-uppercase py-1">Informações Gerais</h3>
        </div>
    </div>

    <div class="card-body px-4 py-1">
        <form method="post" class="row">

            <!--RATIO FORM - DEPARTAMENTO-->
            <div class="row d-none">
                <p class="col-auto text-primary fw-bolder fs-4 my-1">Qual sua área dentro da empresa?</p>
                <span class="col-auto fst-italic align-content-center px-0">(OBRIGATÓRIO)</span>
            </div>
            <div class="row m-sm-auto py-2 d-none">
                <div class="col-auto">
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Administrativo">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Administrativo
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Marketing">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Marketing
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Jurídico">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Jurídico
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Produção">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Produção
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Diretoria">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Diretoria
                        </label>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Comercial">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Comercial
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Financeiro">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Financeiro
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Design">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Design
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Tecnologia da Informação">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Tecnologia da Informação
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" value="Outra">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Outra
                        </label>
                    </div>     
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="Department" default value="default">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Outra
                        </label>
                    </div>
                </div>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <!--RATIO FORM - TAMANHO DA EMPRESA-->
            <div class="row">
                <p class="col-auto text-primary fw-bolder fs-4 my-1">Qual o tamanho da sua empresa?</p>
                <span class="col-auto fst-italic align-content-center px-0">(OBRIGATÓRIO)</span>
            </div>
            <p class="bg-grey">(Classificação segundo o BNDES, considerando a RENDA ou a RECEITA OPERACIONAL BRUTA ANUAL)</p>
            <div class="row m-sm-auto py-2">
                <div class="col-auto">
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySize" value="Até 19 colaboradores">
                        <label class="form-check-label" for="flexRadioDefault1">
                            MEI (Receita ≤ R$ 81 mil)
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySize" value="Entre 100 e 499 colaboradores">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Microempresa (Receita > R$ 81 mil ≤ R$ 360 mil)
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySize" value="Mais de 500 colaboradores">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Pequena Empresa (Receita > R$ 360 mil ≤ R$ 4,8 milhões)
                        </label>
                    </div>
                </div>
                <div class="col-auto d-none">
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="CompanySize" value="Entre 20 e 99 colaboradores">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Entre 20 e 99 colaboradores
                        </label>
                    </div>


                </div>
                <span asp-validation-for="CompanySize" class="text-danger"></span>
            </div>


            <!--RATIO FORM - TEMPO NA FUNÇÃO -->
            <div class="row">
                <p class="col-auto text-primary fw-bolder fs-4 my-1">Há quanto tempo a empresa existe?</p>
                <span class="col-auto fst-italic align-content-center px-0">(OBRIGATÓRIO)</span>
            </div>
            <div class="row m-sm-auto py-2">
                <div class="col-auto">
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="TimeInRole" value="Menos de 6 meses">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Menos de 6 meses
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="TimeInRole" value="6 meses a 1 ano">
                        <label class="form-check-label" for="flexRadioDefault2">
                            6 meses a 1 ano
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="TimeInRole" value="1 a 2 anos">
                        <label class="form-check-label" for="flexRadioDefault1">
                            1 a 2 anos
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="TimeInRole" value="2 a 5 anos">
                        <label class="form-check-label" for="flexRadioDefault2">
                            2 a 5 anos
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="TimeInRole" value="5 a 10 anos">
                        <label class="form-check-label" for="flexRadioDefault1">
                            5 a 10 anos
                        </label>
                    </div>
                    <div class="form-check col-12">
                        <input class="form-check-input border-primary" type="radio" asp-for="TimeInRole" value="Mais de 10 anos">
                        <label class="form-check-label" for="flexRadioDefault2">
                            Mais de 10 anos
                        </label>
                    </div>
                </div>

                <span asp-validation-for="TimeInRole" class="text-danger"></span>
            </div>



            <!-- ATRIBUTOS DAS OUTRAS PÁGINAS (OCULTOS) -->
            <!-- PÁGINA 1 -->
            <input asp-for="Name" class="form-control border-2 shadow py-0 px-4 d-none" style="border-radius: 25px" />
            <input asp-for="Email" class="form-control border-2 shadow p-4 d-none" style="border-radius: 25px" />
            <input asp-for="GrauInstrucao" class="form-check-input border-primary d-none">
            <input asp-for="TermosDeUso" class="form-check-input d-none">
            <!-- PÁGINA 2 -->
            <input asp-for="CompanySocialName" class="form-control border-2 shadow py-0 px-4 d-none" style="border-radius: 25px" />
            <input asp-for="CompanyCNPJ" class="form-control border-2 shadow py-0 px-4 d-none" style="border-radius: 25px" />
            <input asp-for="CompanySector" class="form-check-input border-primary d-none">
            <!-- PÁGINA 3 -->
            
            <input asp-for="RolePosition" class="form-check-input border-primary d-none">
            <input asp-for="PhoneNumber" class="form-check-input border-primary d-none">

            <!-- SUBMIT FORM -->
            <div class="row pt-2 align-content-center justify-content-between">
                <div class="col-auto col-md-3">
                    <a asp-controller="AssessmentForm" asp-action="Index3" asp-route-id="@obj.Id" class="btn btn-secondary border text-dark form-control rounded-4 fw-bold sombra">
                        VOLTAR
                    </a>
                </div>

                <div class="col-auto">
                    <h4 class="fw-bolder">
                        3/3
                    </h4>
                </div>
                <div class="col-auto col-md-3">
                    <button type="submit" asp-controller="AssessmentForm" asp-action="Index4" class="btn-blue form-control text-light rounded-4 fw-bold sombra">
                        AVANÇAR
                    </button>
                </div>
            </div>


            <br />
            <br />
            <br />
        </form>
    </div>


</div>
<br />
<br />
<br />


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}